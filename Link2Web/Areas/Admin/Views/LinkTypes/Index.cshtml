@model IEnumerable<Link2Web.Areas.Admin.Models.LinkType>

@{
    ViewBag.Title = "Index";
}

<div id="main">
    <h2>Link types</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

<div class="container" id="gridList">
    <!--Row with two equal columns-->
    <div class="row" id="gridHeader">
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">@Resources.Resources.Type</div>
        <div class="col-xs-hide col-sm-hide col-md-4 col-lg-4">@Resources.Resources.Visible</div>
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4"></div>
        </div>

    @foreach (var item in Model.ToList())
    {
        <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">@Html.DisplayFor(modelItem => item.Type)</div>
            <div class="col-xs-hide col-sm-hide col-md-hide col-lg-4">@Html.DisplayFor(modelItem => item.Visible)</div>
            <div class="col-xs-6 col-sm-6 col-md-4 col-lg-4">
                <a class="lnk-space" href='@Url.Action("Edit", "LinkTypes", new {id = item.LinkTypeId})'>
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </a>
                <a href='@Url.Action("Delete", "LinkTypes", new {id = item.LinkTypeId})'>
                    <span class="glyphicon glyphicon-remove"></span> Delete
                </a>
            </div>
        </div>
    }

</div>

</div>