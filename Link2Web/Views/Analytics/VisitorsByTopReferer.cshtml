@model Link2Web.ViewModels.AnalyticsViewModel

@{
    ViewBag.Title = "Visitors by top referer";
}

@section scripts
{
    @Styles.Render("~/Content/datatables")
    @Scripts.Render("~/bundles/datatables")

    <script>
        $(function() {

            $('#datatable').DataTable({
                "serverSide": true,
                "processing": true,
                "responsive": true,
                "ajax": "@Url.Action("GetVisitorsByTopReferer", "Analytics", null, Request.Url.Scheme)",
                "columns": [
                    {
                        data: 'Dimension'
                    },
                    {
                        data: 'Users'
                    },
                    {
                        data: "BounceRate", render: $.fn.dataTable.render.number(',', '.', 0, '', '%')
                    },
                    {
                        data: 'Pageviews'
                    },
                    {
                        data: 'OrganicSearches'
                    }
                ]
            });

        });

    </script>

}

<div id="main">

    <h2>Visitors by topreferer</h2>


    <table id="datatable" class="table table-striped table-bordered display responsive nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Dimension</th>
                <th>Users</th>
                <th>BounceRate</th>
                <th>Pageviews</th>
                <th>Organic Searches</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Dimension</th>
                <th>Users</th>
                <th>BounceRate</th>
                <th>Pageviews</th>
                <th>Organic Searches</th>
            </tr>
        </tfoot>
    </table>
</div>