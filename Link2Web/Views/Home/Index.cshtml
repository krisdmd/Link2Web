@using Link2Web.Models
@{
    ViewBag.Title = "Link2Web Dashboard";
}


@section scripts {

    @if (@Model.FacebookPosts == null)
    {
        <script>
            $(function() {
                $('#btnConnect').click(function() {

                    $(location).attr('href', '/Home/Connect/');

                });

            });

        </script>
    }


    @Styles.Render("~/Content/datatables")
    @Scripts.Render("~/bundles/datatables")

    <script>


        $(function() {

            $('#datatable').DataTable({
                "lengthMenu": [[15], [15]],
                "serverSide": true,
                "processing": true,
                "ajax": "@Url.Action("GetVisitors", "Analytics", null, Request.Url.Scheme)",
                "columns": [
                    {
                        data: 'Dimension',
                        render: function (data) {
                            if(data === ""){
                                return '00-00-0000';
                            }

                            f = data.substring(6, 8) + "/" + data.substring(4, 6) + "/" + data.substring(0, 4);
                            return f;
                        }  
                    },
                    {
                        data: 'Users'
                    },
                    {
                        data: "BounceRate",
                        render: $.fn.dataTable.render.number(',', '.', 0, '', '%')
                    },
                    {
                        data: 'Pageviews'
                    },
                    {
                        data: 'OrganicSearches'
                    }
                ]
            });

        });

    </script>

}


<div class="row">
<div class="col-md-4 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Facebook <small>Posts</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>

            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            
            @if (@Model.FacebookPosts != null)
            {
                foreach (var p in Model.FacebookPosts)
                {

                    <article class="media event">
                        <a class="pull-left date">
                            <p class="month">@p.Createdtime.ToString("MM")</p>
                            <p class="day">@p.Createdtime.ToString("dd")</p>
                        </a>
                        <div class="media-body">
                            <a class="title" target="_blank" href="@p.PermalinkUrl">@p.Name</a>
                            <p>@p.Description</p>
                        </div>
                    </article>

                }
            }
            else
            {
                <button class="btn btn-primary" id="btnConnect">Connect to Facebook</button>

            }

        </div>
    </div>
</div>

<div class="col-md-8 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Analytics <small>Visitors</small></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Users</th>
                        <th>BounceRate</th>
                        <th>Pageviews</th>
                        <th>OrganicSearches</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Date</th>
                        <th>Users</th>
                        <th>BounceRate</th>
                        <th>Pageviews</th>
                        <th>OrganicSearches</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

</div>