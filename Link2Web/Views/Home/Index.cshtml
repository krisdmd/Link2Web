@using Link2Web.Models
@{
    ViewBag.Title = "Home Page";
}

@if (@Model.FacebookPosts == null){
@section scripts {
    <script>
        $(function() {

            $('#myModal').modal('show');

            $('#btnConnect').click(function () {

                $(location).attr('href', '/Home/Connect/');

            });

            $('#btnCancel').click(function() {
                $('#myModal').modal('toggle');
            });
        });

    </script>
}
}


