@model Link2Web.Models.Mail

@{
    ViewBag.Title = "Send mail to " + Model.ToEmail;
}

<h2>Create Mail</h2>
<hr />


@using (Html.BeginForm("SendMail", "Links", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12 col-sm-12 col-xs-12 personal-info" id="mailModal">

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert alert-success alert-dismissible fade in">
                Details
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ToEmail, htmlAttributes: new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control col-md-9 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control col-md-9 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group row">
            @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2 col-sm-3 col-xs-12" })
            <div class="col-md-10 col-sm-9 col-xs-12">
                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control col-md-9 col-xs-12" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-12">
                <input type="submit" class="btn btn-primary" value="Save Changes">
                <span></span>
                <input type="reset" class="btn btn-default" value="Cancel">
            </div>
        </div>
    </div>
}
