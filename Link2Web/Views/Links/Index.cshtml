@model IEnumerable<Link2Web.Models.Link>

@{
    ViewBag.Title = "Links";
}

<span id="main">
    <h2>Links</h2>

    <p>
        @Html.ActionLink("Add link", "Create")
    </p>
    @section scripts
{
        @Styles.Render("~/Content/datatables")
        @Scripts.Render("~/bundles/datatables")

        <script>
            $(function () {

                $('#datatable').DataTable({
                    "serverSide": true,
                    "processing": true,
                    "ajax": "@Url.Action("GetLinks", "Links", null, Request.Url.Scheme)",
                    "columns": [
                        {
                            data: 'WebsiteUrl'
                        },
                        {
                            data: 'AnchorText'
                        },
                        {
                            mRender: function (o) { return '<i class="ui-tooltip fa fa-pencil" style="font-size: 22px;" data-original-title="Edit"></i><i class="ui-tooltip fa fa-trash-o" style="font-size: 22px;" data-original-title="Delete"></i>'; }
                        }
                    ]
                });

                $('#mailModal').modal();

            });

        </script>

    }



    <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>WebsiteUrl</th>
                <th>AnchorText</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>WebsiteUrl</th>
                <th>AnchorText</th>
                <th></th>
            </tr>
        </tfoot>
    </table>
    </span>