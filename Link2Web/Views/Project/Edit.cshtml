@model Link2Web.Models.Project

@{
    ViewBag.Title = "Edit";
}

<div id="main">

    <h2>Project settings</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        @Html.HiddenFor(model => model.ProjectId)

        <div class="col-md-12 col-sm-12 col-xs-12 personal-info">

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert alert-success alert-dismissible fade in">
                    Project Details
                </div>
            </div>


            <div class="form-group row">
                @Html.LabelFor(model => model.Name, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.EditorFor(model => model.Name, new {htmlAttributes = new {@class = "form-control col-md-9 col-xs-12"}})
                    @Html.ValidationMessageFor(model => model.Name, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.ViewProfileId, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.EditorFor(model => model.ViewProfileId, new {htmlAttributes = new {@class = "form-control col-md-9 col-xs-12"}})
                    @Html.ValidationMessageFor(model => model.ViewProfileId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control col-md-9 col-xs-12"}})
                    @Html.ValidationMessageFor(model => model.Email, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert alert-info alert-link fade in">
                    Location settings
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.CountryId, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.CountryId, null, htmlAttributes: new {@class = "form-control col-md-10 col-sm-9 col-xs-12"})
                    @Html.ValidationMessageFor(model => model.CountryId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Url, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.EditorFor(model => model.Url, new {htmlAttributes = new {@class = "form-control col-md-9 col-xs-12"}})
                    @Html.ValidationMessageFor(model => model.Url, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.LanguageId, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.LanguageId, null, htmlAttributes: new {@class = "form-control col-md-10 col-sm-9 col-xs-12"})
                    @Html.ValidationMessageFor(model => model.LanguageId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.CurrencyId, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.DropDownListFor(model => model.CurrencyId, null, htmlAttributes: new {@class = "form-control col-md-10 col-sm-9 col-xs-12"})
                    @Html.ValidationMessageFor(model => model.CurrencyId, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 alert alert-info alert-danger fade in">
                    Miscellaneous
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(model => model.Note, htmlAttributes: new {@class = "control-label col-md-2 col-sm-3 col-xs-12"})
                <div class="col-md-10 col-sm-9 col-xs-12">
                    @Html.TextAreaFor(model => model.Note, new {@class = "form-control col-md-9 col-xs-12"})
                    @Html.ValidationMessageFor(model => model.Note, "", new {@class = "text-danger"})
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-12 text-right">
                    <input type="button" class="btn btn-warning" value="Delete project" onclick="location.href = '@Url.Action("Delete", "Project", new {id = Model.ProjectId})'">
                    <input type="submit" class="btn btn-success" value="Save Changes">
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
