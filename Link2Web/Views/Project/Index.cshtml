@model IEnumerable<Link2Web.Models.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ViewProfileId)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.Country.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>@Resources.Resources.Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ViewProfileId)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Country.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Url)
        </td>
        <td>
            @item.Created.ToString("dd/MM/yyyy")
        </td>
        <td>

            <a class="lnk-space" href='@Url.Action("Select", "Project", new {id = item.ProjectId})'>
                <span class="glyphicon glyphicon-new-window"></span> Select
            </a>

            <a href='@Url.Action("Edit", "Project", new {id = item.ProjectId})'>
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>

        </td>
    </tr>
}

</table>
