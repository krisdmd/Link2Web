@using Link2Web.Helpers
@using Link2Web.Models
<!DOCTYPE html>
<html lang="@CultureHelper.GetCurrentNeutralCulture()">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Admin2Web</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/theme")
    @Styles.Render("~/Content/custom")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/datatables")
    @RenderSection("AdditionalResources", false)
</head>
<body class="nav-md">

<div class="container body">
    <div class="main_container">
        <div class="col-md-3 left_col">
            <div class="left_col scroll-view">
                <div class="navbar nav_title" style="border: 0;">
                    <a href='@Url.Action("Index", "Home", new {Area = ""}, null)' class="site_title">
                        <span>Link2Web</span>
                    </a>
                </div>

                <div class="clearfix"></div>

                <!-- menu profile quick info -->
                <div class="profile clearfix">

                    <div class="profile_info">
                        <span>Welcome,</span>
                        <h2>@ViewData["FullName"]</h2>
                    </div>
                </div>
                <!-- /menu profile quick info -->

                <br/>

                <!-- sidebar menu -->
                @Html.Partial("_Sidebar")

                <!-- /menu footer buttons -->
            </div>
        </div>

        <!-- top navigation -->
        @Html.Partial("_TopNavigation")
        <!-- /top navigation -->
        <!-- page content -->
        <div class="right_col" role="main">

            @RenderBody()
        </div>

    </div>
    +
    <!-- /page content -->
    <!-- footer content -->
    <footer>
        <div class="pull-right">
            &copy; @DateTime.Now.Year - K2Web.be
        </div>
        <div class="clearfix"></div>
    </footer>
    <!-- /footer content -->
</div>


@if (Session["Error"] != null && ((Error)Session["Error"]).IsError)
{

    @Html.Partial("_ErrorDialog", (Error)ViewBag.Error)

    <script>
        $(function() {
            $('#myErrorModal').modal('show');
            $('#btnErrorModelOk').click(function() {
                $('#myErrorModal').modal('toggle');
            });

        });
    </script>
}

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/theme")
    @Scripts.Render("~/bundles/jqueryval")

    @if (GlobalSettings.HideCreateProjectDialog == false)
    {
        @Scripts.Render("~/bundles/link2web")
    }


    @Scripts.Render("~/bundles/datatables")

    @RenderSection("scripts", required: false)

</body>
</html>
